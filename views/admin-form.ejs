<body class="p-16 flex flex-col">

  <%- include('partials/header-active') %>

    <div class="ml-auto mr-auto flex flex-col gap-6 w-1/3 centered-div">
      <h1 class="font-serif-display text-4xl">Become an admin</h1>

      <form class="flex flex-col gap-6" action="/become-admin" method="POST">
       
